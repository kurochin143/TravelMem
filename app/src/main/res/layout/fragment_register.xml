<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RegisterFragment"
    android:background="#FFFFFF"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/f_register_et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/commonTextColor"
            android:hint="First Name"/>

        <EditText
            android:id="@+id/f_register_et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/commonTextColor"
            android:hint="Last Name"/>

        <EditText
            android:id="@+id/f_register_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/commonTextColor"
            android:hint="Email"/>

        <EditText
            android:id="@+id/f_register_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/commonTextColor"
            android:hint="Password"/>

        <Button
            android:id="@+id/f_register_b_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/commonTextColor"
            android:text="Register"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>