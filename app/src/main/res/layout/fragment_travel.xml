<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TravelFragment"
    android:background="#FFFFFF"
    android:id="@+id/f_travel_c_root"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/f_travel_t_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Travel Name"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/f_travel_t_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/f_travel_t_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Date"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/f_travel_b_edit_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Route"/>

        <Button
            android:id="@+id/f_travel_b_view_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Images" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>